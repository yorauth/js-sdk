{
  "name": "@yorauth/js-sdk",
  "version": "1.0.0",
  "description": "Official TypeScript SDK for the YorAuth Authentication & Authorization Platform",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "yorauth",
    "authentication",
    "authorization",
    "oauth",
    "oidc",
    "rbac",
    "mfa",
    "sdk"
  ],
  "author": "YorAuth Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yorauth/yorauth-js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "homepage": "https://github.com/yorauth/yorauth-js#readme",
  "bugs": {
    "url": "https://github.com/yorauth/yorauth-js/issues"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
